{%  block body %}
    <div>
        <p>
            List des tags :
        </p>
        <div class="flex ">

            {%  for category in categories %}

                <div class="flex-col mb-4">
                    <label  class="  text-lg font-medium  dark:text-dark">{{ category.category }}</label>
                    <div>
                        {% for tags in category.tags %}
                            <div class="flex items-center mb-4">
                                <input id="default-checkbox" type="checkbox" value="{{ tags.tag }}" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600">
                                <label for="default-checkbox" class="ml-2 text-sm font-medium text-dark dark:text-dark">{{ tags.tag }}</label>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}

        </div>


        <div><a href="{{ path('app_search') }}" class="offer-cta text-white p-1 bg-gray-700 ">Rechercher</a></div>
    </div>
{% endblock %}