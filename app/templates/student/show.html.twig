{% extends 'base.html.twig' %}

{% block title "Information sur le candidat - ARSA" %}

{% block body %}
    <div class="w-3/4 mx-auto">
    <div class="w-full mt-2 mb-3 text-center">
        <a href="javascript:history.back()" class="rounded-md p-1 text-white bg-sky-500 hover:bg-sky-600">Retour à la
            liste</a>
    </div>
    <div>
        <h1 class="text-center">Informations de l'étudiant</h1>
        <div>
            {{ form_label(form.lastname) }}
            {{ form_widget(form.lastname, {'attr': {'readonly': 'readonly'}}) }}
        </div>
        <div>
            {{ form_label(form.firstname) }}
            {{ form_widget(form.firstname, {'attr': {'readonly': 'readonly'}}) }}
        </div>
        <div>
            {{ form_label(form.email) }}
            {{ form_widget(form.email, {'attr': {'readonly': 'readonly'}}) }}
        </div>
        <div class="w-1/2 mx-auto flex justify-around">
            {% if candidacy.status == "En attente" %}
                <a href="{{ path('app_candidacy_accept', {id: candidacy.id}) }}"
                   class="rounded-md p-1 mr-3 text-white bg-green-500 hover:bg-green-600">
                    Accepter
                </a>
                <a href="{{ path('app_candidacy_deny', {id: candidacy.id}) }}"
                   class="rounded-md p-1 text-white bg-red-500 hover:bg-red-600">
                    Refuser
                </a>
            {% elseif candidacy.status == "Validée" %}
                <div class="text-green-400 rounded-md border-2 p-1 mt-2 border-green-400">
                    <p>Vous avez validé cette candidature</p>
                </div>
            {% else %}
                <div class="text-red-400 rounded-md border-2 p-1 mt-2 border-red-400">
                    <p>Vous avez refusé cette candidature.</p>
                </div>
            {% endif %}
        </div>
    </div>
    </div>
{% endblock %}