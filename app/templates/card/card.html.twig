{% block body %}
    <div class="card">

        <div>
            <h1> {{ offer.name }}</h1>
        </div>

        <div>
            <div class="pill-holder">
                <div class="pill bg-red-700">Back</div>
                <div class="pill bg-sky-500">Design</div>
                <div class="pill bg-amber-300">Front</div>
            </div>


            <span class="text-sm font-medium text-gray-500">
                Il y a {{ offer.candidacies|length }} candidature(s) pour cette offre.
            </span>

            <img src="{{ asset(img_enterprises ~ offer.enterprise.imageName) }}" class="w-1/3 float-right"
                 alt="logo de l'entreprise">
        </div>

        <div>
            <p class="text-style-3lines">
                {{ offer.description }}
            </p>
        </div>

        <div class="link-container">
            <div class="link-holder">
                <div><a href="{{ path('app_offers_show', {'id': offer.id}) }}"
                        class="rounded-lg p-2 text-white bg-blue-second p-1">En savoir +</a></div>
                {% if  "ROLE_STUDENT" in current_user_role %}
                    {% set postule = false %}
                    {% for candidature in offer.candidacies %}
                        {% if candidature.student.user.id == current_user_id %}
                            {% set postule = true %}
                        {% endif %}
                    {% endfor %}
                    {% if postule %}
                        <div><a href="#" class="rounded-lg p-2 text-white bg-red-600 ">DÃ©sister</a></div>
                    {% else %}
                        <div>
                            <a href="{{ path('app_new_candidacy', { 'id': offer.id }) }}"
                               class="rounded-lg p-2 text-white bg-blue-first">Postuler</a>
                        </div>
                    {% endif %}
                {% endif %}


            </div>
        </div>


    </div>
{% endblock %}