{% block body %}
    <div class="card">

        <div>
            <h1> {{ offer.name }}</h1>
        </div>

        <div>
            <div class="pill-holder">
                {%  for tag in offer.tags %}
                    <div class="pill bg-red-700">{{ tag.tag }}</div>
                {% endfor %}
            </div>


            <span class="text-sm font-medium text-gray-500">
                Il y a {{ offer.candidacies|length }} candidature(s) pour cette offre.
            </span>

            <img src="{{ asset(img_enterprises ~ offer.enterprise.imageName) }}" class="w-1/3 float-right"
                 alt="logo de l'entreprise">
        </div>

        <div>
            <p class="text-style-3lines">
                {{ offer.description }}
            </p>
        </div>

        <div class="link-container">
            <div class="link-holder">
                <div><a href="{{ path('app_offers_show', {'id': offer.id}) }}" class="offer-cta text-white bg-blue-second p-1">En savoir +</a></div>
                {% if  "ROLE_STUDENT" in current_user_role %}
                    {% set trouver = false %}
                    {% for candidature in offer.candidacies %}
                        {% if candidature.student.user.id == current_user_id %}
                            {% set trouver = true %}
                        {% endif %}
                    {% endfor %}
                    {% if trouver %}
                        <div><a href="#" class="offer-cta text-white p-1 bg-red-600 ">DÃ©sister</a></div>
                    {%  else %}
                        <div><a href="" class="offer-cta text-white p-1 bg-blue-first ">Postuler</a></div>
                    {% endif %}
                {% endif %}






            </div>
        </div>


    </div>
{% endblock %}