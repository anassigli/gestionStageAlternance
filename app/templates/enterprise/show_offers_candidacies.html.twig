{% extends 'base.html.twig' %}

{% block body %}
    <div class="flex flex-col w-full items-center">
        <a href="javascript:history.back()" class="rounded-md p-1 mb-3 text-white bg-sky-500 hover:bg-sky-600">Retour à
            la
            liste</a>
        <div class="w-full mt-1 mb-1 border-2 rounded p-3">
            <div class="w-full flex justify-between items-center">
                <div class="flex flex-col">
                    <span class="text-2xl underline">{{ offer.name }}</span>
                    <span class="rounded-md text-white bg-green-400 w-fit p-1">{{ offer.status }}</span>
                </div>
                <p>
                    <span class="text-gray-400"><span class="font-semibold">{{ offer.candidacies|length }}</span> Candidatures</span>
                </p>
            </div>
            <p>Liste des étudiants intéressés :</p>
            <ul class="pl-2">
                {% for candidacy in offer.candidacies %}
                    <li class="m-0.5 flex justify-between items-center">
                        <a href="{{ path('app_student_show_profile', {id:candidacy.student.id}) }}">
                            {{ candidacy.student.lastname }} {{ candidacy.student.firstname }}
                        </a>
                        <span class="rounded-md text-white bg-green-400 w-fit p-1">{{ candidacy.status }}</span>
                        {% if offer.status != "Pourvue" %}
                            <div class="flex justify-around">
                                <a href="{{ path('app_candidacy_accept', {id: candidacy.id}) }}"
                                   class="rounded-md p-1 mr-3 text-white bg-green-500 hover:bg-green-600">
                                    Accepter
                                </a>
                                <a href="{{ path('app_candidacy_refuse', {id: candidacy.id}) }}"
                                   class="rounded-md p-1 text-white bg-red-500 hover:bg-red-600">
                                    Refuser
                                </a>
                            </div>
                        {% endif %}
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}