{% extends 'base.html.twig' %}

{% block title "Vos offres - ARSA" %}

{% block body %}
    <div class="w-3/4 mx-auto">
    <div class=" w-full text-center mb-3">
        <a href="{{ path('app_offers_create') }}" class="rounded-md p-2 text-white bg-sky-500 hover:bg-sky-600">Ajouter une offre</a>
    </div>

    <div class="grid grid-cols-2 gap-8 mx-auto">
        {% for offer in offers %}
            {% include 'card/card.html.twig' with
                {
                    'offer': offer,
                } %}
        {% endfor %}
    </div>
    </div>
{% endblock %}